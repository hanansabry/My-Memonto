<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="16dp"
    android:background="?android:selectableItemBackground"
    android:clickable="true">

    <ImageView
        android:id="@+id/note_icon"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_marginRight="16dp"
        android:src="@drawable/ic_assignment_black_24dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/note_title_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:text="My First Note"
        android:textStyle="bold"
        android:textSize="16sp"
        app:layout_constraintLeft_toRightOf="@+id/note_icon"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/note_date_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="8dp"
        android:text="24, Jan 2018"
        android:textSize="12sp"
        app:layout_constraintLeft_toRightOf="@+id/note_icon"
        app:layout_constraintTop_toBottomOf="@+id/note_title_tv" />


</android.support.constraint.ConstraintLayout>