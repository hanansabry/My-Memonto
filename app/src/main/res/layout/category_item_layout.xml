<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="16dp"
    android:background="?android:selectableItemBackground"
    android:clickable="true">

    <ImageView
        android:id="@+id/category_icon"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_marginRight="16dp"
        android:src="@drawable/ic_assignment_black_24dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/category_name_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:text="My First Category"
        android:textStyle="bold"
        android:textSize="16sp"
        app:layout_constraintLeft_toRightOf="@+id/category_icon"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/category_notes_num_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="8dp"
        android:text="5 notes"
        android:textSize="12sp"
        app:layout_constraintLeft_toRightOf="@+id/category_icon"
        app:layout_constraintTop_toBottomOf="@+id/category_name_tv" />

    <TextView
        android:id="@+id/category_date_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="22 Jan, 2018"
        android:textSize="12sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toRightOf="@+id/category_notes_num_tv"
        app:layout_constraintTop_toBottomOf="@+id/category_name_tv"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintVertical_bias="0.5" />

</android.support.constraint.ConstraintLayout>