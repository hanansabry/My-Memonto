<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/primaryDarkColor</item>
        <item name="colorPrimaryDark">@color/primaryLightColor</item>
        <item name="colorAccent">@color/secondaryDarkColor</item>
    </style>

    <style name="AppTheme.PopupOverlay" parent="AppTheme.PopupOverlay">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/primaryColor</item>
        <item name="colorPrimaryDark">@color/primaryDarkColor</item>
        <item name="colorAccent">@color/secondaryColor</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="AppTheme.AppBarOverlay">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/primaryColor</item>
        <item name="colorPrimaryDark">@color/primaryDarkColor</item>
        <item name="colorAccent">@color/secondaryColor</item>
    </style>

</resources>
